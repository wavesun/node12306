#query-modal
  width: 500px
  background:url('/images/bg3.png')
  margin: -60px auto 0
  min-height:150px
  padding:20px 10px
  box-shadow:0 2px 10px #000
  border-radius: 0 0 5px 5px

input.station
  margin-left: 2px

#select-res
  width: 500px
  margin: 20px auto
  background:transparent
  padding: 20px 10px
  border-radius: 5px
  box-shadow:0 2px 10px #000 inset
  color: #999
  text-shadow: 0 1px 1px #000

#select-res li
  list-style:none
  -webkit-transition:all .3s
  -moz-transition:all .3s
  transition:all .3s
  margin-top:8px
  cursor: pointer

#select-res li.active
  color: steelblue

#select-res span
  display:inline-block
  width: 95px

